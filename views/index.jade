extends layout

block myContent
 html
  head
  body
    .container-fluid
      // Page Heading
      .d-sm-flex.align-items-center.justify-content-between.mb-4
        h1.h3.mb-0.text-gray-800 Dashboard
        |             
        a.d-none.d-sm-inline-block.btn.btn-sm.btn-primary.shadow-sm(href='#')
          i.fas.fa-download.fa-sm.text-white-50
          |  Generate Report
      // Content Row
      .row
        // Earnings (Monthly) Card Example
        .col-xl-3.col-md-6.mb-4
          .card.border-left-primary.shadow.h-100.py-2
            .card-body
              .row.no-gutters.align-items-center
                .col.mr-2
                  .text-xs.font-weight-bold.text-primary.text-uppercase.mb-1  upcoming Trips (Monthly)
                  |                       
                  .h5.mb-0.font-weight-bold.text-gray-800= selectTotalVar[1][0].upComingTripsThisMonth 
                |                     
                .col-auto
                  i.fas.fa-calendar.fa-2x.text-gray-300
        // Earnings (Monthly) Card Example
        .col-xl-3.col-md-6.mb-4
          .card.border-left-success.shadow.h-100.py-2
            .card-body
              .row.no-gutters.align-items-center
                .col.mr-2
                  .text-xs.font-weight-bold.text-success.text-uppercase.mb-1  Earnings (Totally)
                  |                       
                  .h5.mb-0.font-weight-bold.text-gray-800= selectTotalVar[0][0].totalProfit
                |                     
                .col-auto
                  i.fas.fa-dollar-sign.fa-2x.text-gray-300
        // Earnings (Monthly) Card Example
        .col-xl-3.col-md-6.mb-4
          .card.border-left-success.shadow.h-100.py-2
            .card-body
              .row.no-gutters.align-items-center
                .col.mr-2
                  .text-xs.font-weight-bold.text-success.text-uppercase.mb-1  topWebsite
                  |                       
                  .h5.mb-0.font-weight-bold.text-gray-800=selectTotalVar[2][0].topWebsite
                |                     
                .col-auto
                  i.far.fa-window-restore.fa-2x.text-gray-300
        // Pending Requests Card Example
        .col-xl-3.col-md-6.mb-4
          .card.border-left-warning.shadow.h-100.py-2
            .card-body
              .row.no-gutters.align-items-center
                .col.mr-2
                  .text-xs.font-weight-bold.text-warning.text-uppercase.mb-1  topTrip
                  |                       
                  .h5.mb-0.font-weight-bold.text-gray-800=selectTotalVar[3][0].topTrip
                |                     
                .col-auto
                  i.fas.fa-globe-africa.fa-2x.text-gray-300
      // Content Row
      .row
        // Area Chart
        .col-xl-8.col-lg-7
          .card.shadow.mb-4
            // Card Header - Dropdown
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
              h6.m-0.font-weight-bold.text-primary Earnings Overview
              |                   
              .dropdown.no-arrow
                a#dropdownMenuLink.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
                |                     
                .dropdown-menu.dropdown-menu-right.shadow.animated--fade-in(aria-labelledby='dropdownMenuLink')
                  .dropdown-header Dropdown Header:
                  |                       
                  a.dropdown-item(href='#') Action
                  |                       
                  a.dropdown-item(href='#') Another action
                  |                       
                  .dropdown-divider
                  |                       
                  a.dropdown-item(href='#') Something else here
            // Card Body
            .card-body
              .chart-area
                canvas#myAreaChart
        // Pie Chart
        .col-xl-4.col-lg-5
          .card.shadow.mb-4
            // Card Header - Dropdown
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
              h6.m-0.font-weight-bold.text-primary Trips percentage
              |                   
              .dropdown.no-arrow
                a#dropdownMenuLink.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
                |                     
                .dropdown-menu.dropdown-menu-right.shadow.animated--fade-in(aria-labelledby='dropdownMenuLink')
                  .dropdown-header Dropdown Header:
                  |                       
                  a.dropdown-item(href='#') Action
                  |                       
                  a.dropdown-item(href='#') Another action
                  |                       
                  .dropdown-divider
                  |                       
                  a.dropdown-item(href='#') Something else here
            // Card Body
            .card-body
              .chart-pie.pt-4.pb-2
                canvas#myPieChart
              |                   
      // Content Row
      .row
        // Content Column
        .col-lg-12.mb-4
          // Project Card Example
          .card.shadow.mb-4
            .card-header.py-3
              h6.m-0.font-weight-bold.text-primary Top Websites 
            |   
            -for (i=0; i<(selectTotalVar[2][0].topWebsite.length)-1 ;i++) {
              .card-body
                h4.small.font-weight-bold=selectTotalVar[2][i].topWebsite
                .progress
                  .progress-bar.bg-warning(role='progressbar', style=`width:${selectTotalVar[4][i]}%`, aria-valuenow='100', aria-valuemin='0', aria-valuemax='100')
            -}
    // /.container-fluid
    // End of Main Content


